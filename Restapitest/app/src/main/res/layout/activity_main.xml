<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deep.restapitest.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/checkinto"
        android:hint="CheckinTo"
        android:layout_below="@+id/checkinfrom"
        android:layout_alignStart="@+id/textLastname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/checkinfrom"
        android:hint="CheckinFrom"
        android:layout_below="@+id/textLastname"
        android:layout_alignStart="@+id/checkinto"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/textLastname"
        android:hint="Lastname"
        android:layout_below="@+id/textFirstname"
        android:layout_alignStart="@+id/textFirstname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/phone"
        android:hint="Phone"
        android:layout_below="@+id/checkinto"
        android:layout_alignStart="@+id/checkinto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/textFirstname"
        android:hint="FirstName"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Make a Reservation "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_Book"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
